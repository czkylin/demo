.container{
  width: 100%;
  height: 100%;
}
.section{
  display: flex;
  width: 100%;
  height: 280rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.img{
  display: block;
  width: 260rpx;
  height: 280rpx;
}
.text{
  flex: 1;
  margin-left: 20rpx;
}
.p{
  display: block;
  margin-bottom: 12rpx;
}
.title{
  font-size: 36rpx;
  color: #6435c9;
}
.content{
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.6);
}
.grade{
  color: #db2828;
