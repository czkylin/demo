<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>list</title>
    <link rel="stylesheet" href='/stylesheets/style.css' media="screen" title="no title" charset="utf-8">
  </head>
  <body>
    <%- include header %>
    <table>
      <input type="button" name="name" value="添加" onclick="location.href='/comment'">
      <colgroup>
        <col style="width:10%"></col>
        <col style="width:50%"></col>
        <col></col>
      </colgroup>
      <tr>
        <th>序号</th>
        <th>标题</th>
        <th>内容</th>
      </tr>
      <% for(var i = 0; i < list.length; i++) { %>
      <tr>
        <td><%= i+1 %></td>
        <td><a href="./detail?uid=<%= list[i].uid %>"><%- list[i].title %></td>
        <td><%- list[i].content %></td>
      </tr>
      <% } %>
      <tr>
        <td colspan="3">
          <a href="./list?pageNo=1">首页</a>
          <a href="./list?pageNo=<%= pageNo>1 ? pageNo-1 : 1 %>">上一页</a>
          <a href="./list?pageNo=<%= pageNo<totalPage ? pageNo+1 : totalPage %>">下一页</a>
          <a href="./list?pageNo=<%= totalPage %>">尾页</a>
          <%= pageNo %>/<%= totalPage %>
          共<%= count %>条数据
        </td>
      </tr>
    </table>
  </body>
</html>
