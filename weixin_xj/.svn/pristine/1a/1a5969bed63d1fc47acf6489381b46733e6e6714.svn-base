@charset "utf-8";
/* CSS Document */
/*底部v2统一样式*/
footer { width: 100%; position: fixed; bottom: 0; left: 0; right: 0; height: 55px; background-color: #f5f5f5; color:#666; }
footer a { width: 20%; font-size: 10px; display: inline-block; float: left; text-align: center; line-height: 20px; padding-top: 35px; position:relative; color:#666; background:url(../images/footer/index.png) no-repeat center 10px;}

footer a.over_footer_shouye { background:url(../images/footer/index.png) no-repeat center 7px; background-size: 25px;}
footer a.over_footer_shouye_on { background:url(../images/footer/index2.png) no-repeat center 7px; background-size: 25px; color:#317be8;}

footer a.over_footer_huanzhe { background:url(../images/footer/huanzhe.png) no-repeat center 7px; background-size: 25px;}
footer a.over_footer_huanzhe_on { background:url(../images/footer/huanzhe2.png) no-repeat center 7px; background-size: 25px; color:#317be8;}

footer a.over_footer_pengyou { background:url(../images/footer/pengyou.png) no-repeat center 7px; background-size: 25px;}
footer a.over_footer_pengyou_on { background:url(../images/footer/pengyou2.png) no-repeat center 7px; background-size: 25px; color:#317be8;}

footer a.over_footer_dingdan_dd { background:url(../images/footer/dingdan.png) no-repeat center 7px;  background-size: 25px;}
footer a.over_footer_dingdan_dd_on { background:url(../images/footer/dingdan2.png) no-repeat center 7px; background-size: 25px; color:#317be8;}

footer a.over_footer_geren { background:url(../images/footer/geren.png) no-repeat center 7px;  background-size: 25px;}
footer a.over_footer_geren_on { background:url(../images/footer/geren2.png) no-repeat center 7px; background-size: 25px; color:#317be8;}

footer .over_footer_xinxitishi_on{ border-radius:50%; background-color:#F00; color:#fff; width:2em; height:2em; line-height:2em; text-align:center; position:absolute; top:5px; right:30%;font-family: Helvetica, Arial, sans-serif;}
