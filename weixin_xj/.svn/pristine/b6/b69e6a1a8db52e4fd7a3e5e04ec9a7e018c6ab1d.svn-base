body{font-size:14px;color:#333;background:#fff;}
.hr{background:#f5f5f5;height:10px;width:100%}
nav{position:fixed;top:0;left:0;width:100%;background:#fff;z-index:10;}
nav a{display:block;color:#666;border-bottom:1px solid #fff;width:6rem;line-height:44px;}
nav a.active{border-bottom-color:#ed5377;color:#ed5377;}
.app{padding-top:45px;}
.app li{border-bottom:1px solid #e7e7e7;padding:0 0.5rem;}
.app li.sel{position:relative;}
.app li.sel:before{position:absolute;right:.5rem;top:50%;margin-top:-3px;border-left:5px solid transparent;border-right:5px solid transparent;border-top:6px solid #333;content:'';z-index:2;}
.app li:first-child{border-top:1px solid #e7e7e7;}
.app span{line-height:44px;display:block;max-width:5.5rem;}
.app input{-webkit-appearance:none;border-width:0;height:44px;line-height:44px;display:block;outline:none;font-size:14px;}
input.names{width:9rem;}
input.outer{width:7.4rem;}
input.outerphone{width:5.5rem;}
.app select{-webkit-appearance:none;border-width:0;outline:none;height:44px;width:7.4rem;position:relative;background:#fff;font-size:14px;}
.app label{display:block;line-height:44px;}
.app label input{display:none;}
.app i{width:18px;height:18px;border-radius:18px;border:1px solid #666;display:inline-block;vertical-align:middle;margin-left:20px;position:relative;}
.app i:before{background:#fff;width:6px;height:6px;border-radius:6px;position:absolute;top:50%;left:50%;margin-top:-3px;margin-left:-3px;content:'';}
label input:checked~i{background:#ed5377;border-color:#ed5377;}
label input:disabled~i{background:#ccc;border-color:#ccc;}
.app em{color:#ed5377;font-style:normal;vertical-align:text-bottom;display:block;line-height:44px;margin:2px 4px 0 0;}
.app p{padding:0 0.5rem;line-height:44px;}
.app small{font-size:10px;}
.app strong{font-weight:normal;color:#ed5377;font-size:18px;}
.app a{margin:90px auto 40px;background:#ed5377;color:#fff;line-height:44px;border-radius:4px;display:block;width:11rem;}
.mask{position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.6);transition:.3s;-webkit-transition:.3s;z-index:100;opacity:0;visibility:hidden;}
.dialog{background:#fff;width:10rem;padding:.5rem;transition:.2s .2s;-webkit-transition:.2s .2s;transform:scale3d(0,0,0);transform:scale3d(0,0,0);}
.dialog p,.dialog a{line-height:44px;}
.dialog a{display:block;background:#ed5377;color:#fff;}
.visible{visibility:visible;opacity:1;}
.scale{transform:scale3d(1,1,1);-webkit-transform:scale3d(1,1,1);}

.app h2{font-weight:normal;padding:0 0.5rem;font-size:14px;line-height:44px;border-top:1px solid #e7e7e7;}
.content{background:#f5f5f5;color:#666;}
.content p{line-height:36px;}
.content b{font-weight:normal;}
.content b.warn{color:#fe0101;}
.content b.ok{color:#4db000;}
.buyList{line-height:44px;height:44px;}
.app .buyList a{background:none;display:inline-block;width:3rem;color:#666;line-height:24px;border:1px solid #666;border-radius:4px;margin:9px 0.5rem 0 0;}
.app .buyList a.active{color:#ed5377;border-color:#ed5377;}