/* reset css */
*{margin:0; padding:0;}
a{-webkit-tap-highlight-color:rgba(0,0,0,0); text-decoration: none;}
img{vertical-align: top;}
li{list-style: none;}
body{background: #fff;}
.clear:after{display: block; content: ''; clear: both;}
/* main css */
.list{}
.list li{padding: 0.4rem 0.48rem; border-bottom: 1px solid #e7e7e7; }
.list .selector{float: left;}
.list .selector span{float: left; display: block; width: 1.28rem; height: 1.8rem; background: url(/weixin/Public/Member/images/zhengcejiedu/selector.png) no-repeat 0 center; background-size: 0.78rem 0.78rem;}
.list .selector img{width: 1.8rem; height: 1.8rem; display: block; float: left; margin-right: 0.5rem;}
.list .selector p{width: 7.5rem; overflow: hidden; line-height: 0.9rem; font-size: 0.56rem; color: #333;}
.list .link{float: right; display: block; width: 1rem; height: 1.8rem; background: url(/weixin/Public/Member/images/zhengcejiedu/eye.png) no-repeat center; background-size: 1rem 0.56rem;}
.list .selector.active span{background-image: url(/weixin/Public/Member/images/zhengcejiedu/selector-active.png);}

/*分享*/
.fenxiang_con{ width:100%; height:100%; display:none;}

.fenxiang{background: rgba(0, 0, 0, 0.83); width: 100%; height: 100%; position: fixed; top: 0; left: 0; z-index: 999;  }
.fenxiang img{ width:50%; position:absolute; right:10px; top:10px;}

.share{display: block; margin: 0.6rem auto; width: 14.04rem; height: 1.56rem; background: #ff647c; border: 1px solid #ef4a65; border-radius: 3px; line-height: 1.56rem; text-align: center; color: #fff; font-size: 0.6rem;}

/*二维码*/
section{padding: 0.76rem 0; text-align: center; border-bottom: 1px solid #e7e7e7;}
section img{display: inline-block; width: 4.5rem; height: 4.5rem;}
section p{height: 1.14rem; line-height: 1.14rem; font-size: 0.48rem; color: #666;}