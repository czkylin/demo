<script>
var $i = document.querySelector('.pics i'),
    $p = document.querySelector('.text p'),
    onOff = true;
    
$i.onclick = function(){
    if(onOff){
        $p.className = '';
        this.className = 'ui-icon-unfold down';
    }else{
        $p.className = 'limit';
        this.className = 'ui-icon-unfold';
    }
    onOff = !onOff;
}
</script>
