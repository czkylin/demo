        <section class="unit">
            <div class="team box">
                <div class="box">
                    <div class="image">
                        <if condition="$info['SMALL_PIC'] eq '' ">
                            <img src="/weixin/Public/Expert/images/teams/user.png" width="100%" />
                        <else/>
                            <img src="{$info.SMALL_PIC}" width="100%" />
                        </if>
                    </div>
                    <div class="text">
                        <h2>{$info.EXPERT_NAME}<small>{$info.EXPERT_ROLE}</small></h2>
