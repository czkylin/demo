/*!
 * 搜索公用样式*/
 

.ui-dilan{ position: fixed; bottom: 0; height: 55px; width: 100%; background-color: #f4f4f4;}
.ui-search{ height: 55px; width: 100%; position: relative; background-color: #f4f4f4; padding: 0 86px 0 1px; -webkit-box-sizing:border-box;box-sizing:border-box;}
.ui-searchImg{ padding: 0 80px 0 50px;}
.ui-search .ui-upimg{ position: absolute; left: 12px; top: 10px; height: 45px; width: 45px; overflow: hidden; background: url(images/icon_img.jpg) no-repeat; background-size: 30px;}
.ui-search .ui-upimg input{ opacity: 0;}
.ui-search .ui-searchtxt{ width: 100%; height: 100%; position: relative;}
.ui-search .ui-searchtxt input{border:#e7e7e7 solid 1px; display: block; width: 100%; height:30px; margin: 0 0 0 8px; padding: 9px 0 9px 10px; position: absolute; top: 10px; left: 0; z-index: 100; background-color: #fff; border-radius:3px;color: #999; line-height:14px; -webkit-box-sizing:border-box;box-sizing:border-box; background:#fff url(images/icon_search.png) no-repeat right 10px center; background-size:15px; font-size:12px;}
.ui-search input.ui-btn-search{ position: absolute; right:9px; top: 11px; width: 60px; height: 28px; border-radius:3px; opacity: 1; border: 0; text-align: center; background-color: #ff647c; color: #fff; z-index: 101; }
.ui-searchDoc{ padding-left: 100px;}
.ui-searchDoc .ui-upimg{ left: 50px;}
.ui-searchDoc .ui-searchLink{ position: absolute; left: 10px; top: 10px;  height: 45px; width: 45px; background: url(images/icon_chufang.png) no-repeat; background-size: 30px; }
.ui-searchDoc .ui-searchLink a{ position: absolute; display: inline-block; width: 100%; height: 100%;}
.ui-dilancon{ width: 100%; height: 55px; opacity: 0;}