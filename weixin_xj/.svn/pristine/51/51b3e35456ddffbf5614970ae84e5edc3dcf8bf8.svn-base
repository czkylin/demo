/*common css*/
*{padding: 0; margin: 0;}
img{vertical-align: top;}
li{list-style: none;}
a{text-decoration: none;-webkit-tap-highlight-color:rgba(0,0,0,0);}
i{font-style: normal;}
.fl{float: left;}
.fr{float: right;}
.clear:after{display: block; content: ""; clear: both;}
/*main css*/
.list{padding: 10px 3.2%;}
.list li{background: #e7e7e7; color: #333; padding: 10px; margin-bottom: 10px;}
.list .des{float: left;}
.list .des p{height: 24px; line-height: 24px; font-size: 14px;}
.list .des p:nth-of-type(2){font-size: 13px;}
.list .time{float: right; height: 48px; line-height: 48px; font-size: 13px;}