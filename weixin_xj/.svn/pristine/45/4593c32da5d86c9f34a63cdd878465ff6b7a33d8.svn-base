body,html{height:100%;}
article{height:100%;overflow:hidden;}
section{height:200%;transition:2s linear;-webkit-transition:.5s linear;position:relative;}
canvas{display:block;}
.hide{display:none;}
.mask{position:absolute;bottom:0;left:0;background:rgba(0,0,0,0);width:100%;height:50%;transition:.5s;-webkit-transition:.5s;}
.snowman{position:absolute;left:0;bottom:0;width:200px;z-index:1000;}
.btn{width:100px;height:100px;position:absolute;top:0;left:0;visibility:hidden;}
.active{visibility:visible;animation:flash 1s infinite;-webkit-animation:flash 1s infinite;}
.gt{transition:.5s;-webkit-transition:.5s;}
.gift{position:absolute;bottom:0;left:0;transform:translate3d(0,100%,0);-webkit-transform:translate3d(0,100%,0);transition:.5s;-webkit-transition:.5s;}
.up{transform:translate3d(0,0,0);-webkit-transform:translate3d(0,0,0);}
.down{transform:translate3d(0,100%,0);-webkit-transform:translate3d(0,100%,0);}
.top{transform:translate3d(0,-5%,0);-webkit-transform:translate3d(0,-5%,0);}
.topup{transform:translate3d(0,-500%,0);-webkit-transform:translate3d(0,-500%,0);}
.lid{margin-bottom:-4.6rem;position:relative;z-index:10;transition:.5s;-webkit-transition:.5s;}
.boxs{margin-bottom:-5rem;position:relative;z-index:9;transition:.5s;-webkit-transition:.5s;}
.hands{position:relative;z-index:11;transition:.5s;-webkit-transition:.5s;}
.happy{transform:scale(0) translate3d(0,0,0);-webkit-transform:scale(0) translate3d(0,0,0);width:12rem;position:absolute;top:0;left:50%;margin-left:-6rem;transition:.5s;-webkit-transition:.5s;}
.happy a{color:#fff;background:#d4353a;border-radius:3px;height:30px;line-height:30px;display:block;width:3rem;font-size:14px;position:absolute;bottom:1em;left:50%;margin-left:-1.5rem;}
.scale{transform:scale(1) translate3d(0,-80%,0);-webkit-transform:scale(1) translate3d(0,-80%,0);}
.pace{position:absolute;width:100%;height:100%;top:0;left:0;background:#fff;}
.music{position:fixed;top:10px;right:10px;width:30px;height:30px;border-radius:30px;background:#fff;overflow:hidden;background:url(/weixin/Public/Member/css/huzhu/music.svg) no-repeat;background-size:contain;}
.rotate{animation:rotate 2s linear infinite;-webkit-animation:rotate 2s linear infinite;}
@keyframes flash{
    50%{
        transform: translate3d(0,-50px,0);
    }
}
@-webkit-keyframes flash{
    50%{
        -webkit-transform: translate3d(0,-50px,0);
    }
}
@keyframes rotate{
    0%{
        transform:rotateZ(0deg);
    }
    50%{
        transform:rotateZ(180deg);
    }
    100%{
        transform:rotateZ(360deg);
    }
}
@-webkit-keyframes rotate{
    0%{
        -webkit-transform:rotateZ(0deg);
    }
    50%{
        -webkit-transform:rotateZ(180deg);
    }
    100%{
        -webkit-transform:rotateZ(360deg);
    }
}