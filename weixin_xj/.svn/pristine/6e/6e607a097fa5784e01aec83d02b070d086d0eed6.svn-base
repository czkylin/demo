<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="cache-control" content="public">
    <meta id="viewport" name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" href="/weixin/Public/Common/css/common/basic.css">
    <link rel="stylesheet" href="/weixin/Public/Common/css/Swiper/swiper.min.css">
    <link rel="stylesheet" href="/weixin/Public/Member/css/one/one.min.css">
    <title>一体机</title>
    <script>
        document.getElementsByTagName('html')[0].style.fontSize = document.documentElement.clientWidth/10 + 'px';
    </script>
</head>
<body>
    <article class="swiper-container">
        <section class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="one">
                    <h2 class="down"><img src="/weixin/Public/Member/images/one/title.jpg" width="90%" /></h2>
                    <!--<div class="top"><img src="/weixin/Public/Member/images/one/top.png" width="100%;" /></div>-->
                    <!--<div class="bottom"><img src="/weixin/Public/Member/images/one/bottom.png" width="100%;" /></div>-->
                </div>
                <div class="arrow move"></div>
            </div>
            <div class="swiper-slide">
                <div class="two">
                    <h3><img src="/weixin/Public/Member/images/one/banner.jpg" width="100%" /></h3>
                    <div class="list center">
                        <ul>
                            <li><img src="/weixin/Public/Member/images/one/td.jpg" width="100%" /></li>
                            <li><img src="/weixin/Public/Member/images/one/td.jpg" width="100%" /></li>
                            <li><img src="/weixin/Public/Member/images/one/td.jpg" width="100%" /></li>
                        </ul>
                    </div>
                </div>
                <div class="arrow move"></div>
            </div>
            <div class="swiper-slide">
                <div class="three">
                    <h3><img src="/weixin/Public/Member/images/one/banner.jpg" width="100%" /></h3>
                    <div class="topImg"><img src="/weixin/Public/Member/images/one/ys.jpg" width="100%" /></div>
                    <div class="bottomTxt center">
                        <div><img src="/weixin/Public/Member/images/one/text.jpg" width="100%" /></div>
                    </div>
                </div>
                <div class="arrow move"></div>
            </div>
            <div class="swiper-slide">
                <div class="four">
                    <h3><img src="/weixin/Public/Member/images/one/banner.jpg" width="100%" /></h3>
                    <div class="list center">
                        <div style="position:relative;width:100%;" id="imgs">
                            <div class="imgList">
                                <img src="/weixin/Public/Member/images/one/i1.png" />
                                <img src="/weixin/Public/Member/images/one/i2.png" />
                            </div>
                            <div class="imgList">
                                <img src="/weixin/Public/Member/images/one/i3.png" />
                                <img src="/weixin/Public/Member/images/one/i7.png" />
                                <img src="/weixin/Public/Member/images/one/i8.png" />
                                <img src="/weixin/Public/Member/images/one/i9.png" />
                            </div>
                            <div class="imgList">
                                <img src="/weixin/Public/Member/images/one/i10.png" />
                                <img src="/weixin/Public/Member/images/one/i11.png" />
                                <img src="/weixin/Public/Member/images/one/i12.png" />
                                <img src="/weixin/Public/Member/images/one/i6.png" />
                            </div>
                            <div class="imgList">
                                <img src="/weixin/Public/Member/images/one/i4.png" />
                                <img src="/weixin/Public/Member/images/one/i5.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="arrow move"></div>
            </div>
            <div class="swiper-slide">
                <div class="five">
                    <h3><img src="/weixin/Public/Member/images/one/banner.jpg" width="100%" /></h3>
                    <div class="ls center">
                        <ul class="l-child">
                            <li><img src="/weixin/Public/Member/images/one/txt.png" width="100%" /></li>
                            <li><img src="/weixin/Public/Member/images/one/txt.png" width="100%" /></li>
                            <li><img src="/weixin/Public/Member/images/one/txt.png" width="100%" /></li>
                            <li><img src="/weixin/Public/Member/images/one/txt.png" width="100%" /></li>
                        </ul>
                    </div>
                </div>
                <div class="arrow move"></div>
            </div>
            <div class="swiper-slide">
                <div class="five">
                    <h3><img src="/weixin/Public/Member/images/one/banner.jpg" width="100%" /></h3>
                    <div class="list center">
                        <div class="fzs"><img src="/weixin/Public/Member/images/one/medical.jpg" width="100%" /></div>
                    </div>
                </div>
                <div class="arrow move"></div>
            </div>
        </section>
    </article>
</body>
<script src="/weixin/Public/Common/js/jquery.min.js"></script>
<script src="/weixin/Public/Common/js/swiper.min.js"></script>
<script>
var mySwiper = new Swiper('.swiper-container',{
    direction: 'vertical',
    onSlideChangeEnd: function(swiper){
        //$('.arrow').addClass('move');
        if(swiper.activeIndex == 1){
            $('.two li').not(':eq(1)').addClass('toRight')
            $('.two li').eq(1).addClass('toLeft')
        }else if(swiper.activeIndex == 2){
            $('.topImg').addClass('toDown');
            $('.bottomTxt').addClass('scale');
        }else if(swiper.activeIndex == 3){
            $('#imgs img').addClass('scale1');
        }else if(swiper.activeIndex == 4){
            $('.l-child li').addClass('light');
        }else if(swiper.activeIndex == 5){
            $('.fzs').addClass('fz');
        }
    }
})       
</script>
</html>