/* reset css */
*{margin: 0; padding: 0;}
li{list-style: none;}
img{vertical-align: top;}
html,body{height: 100%; overflow: hidden;}
a{-webkit-tap-highlight-color:rgba(0,0,0,0); text-decoration: none;}
.clear:after{content: '';display: block; clear: both;}
/* main css */
@-webkit-keyframes move{
	0%{
		-webkit-transform:translateY(10px);
		transform:translateY(10px);
	}
	50%{
		-webkit-transform:translateY(0px);
		transform:translateY(0px);
	}
	100%{
		-webkit-transform:translateY(10px);
		transform:translateY(10px);
	}
}
@keyframes move{
	0%{
		-webkit-transform:translateY(10px);
		transform:translateY(10px);
	}
	50%{
		-webkit-transform:translateY(0px);
		transform:translateY(0px);
	}
	100%{
		-webkit-transform:translateY(10px);
		transform:translateY(10px);
	}
}
.swiper-slide{position: relative;}
img{width: 100%; height: 100%;}
.arrow{
	-webkit-animation:move 1s linear infinite;
	position: absolute; height: 0.7rem; display: block; width: 100%; left: 0; bottom: 20px; background: url(/weixin/Public/Member/images/huzhu/share_parent/arrow.png) no-repeat center; background-size: 0.74rem 0.7rem;
}
.link{
	position: absolute;
	left: 0;
	bottom: 0.86rem;
	display: block;
	width: 11rem;
	padding: 0 2rem;
}
.link a{
	float: left;
	width: 4.54rem;
	height: 1.18rem;
	border: 1px solid #7a3303;
	font-size: 0.62rem;
	color: #7a3303;
	line-height: 1.18rem;
	text-align: center;
	border-radius: 0.56rem;
}
.link a:nth-of-type(2){float: right;}
.fl{float: left;}
.nav{position:fixed;top:0;left:0;background:rgba(0,0,0,0.3);width:13.75rem;padding:10px 0.625rem; z-index: 10000;}
.nav .people{overflow:hidden;position:relative;width:10rem;height:18px;}
.nav ul{height:18px;position:absolute;top:0;left:0;}
.nav span{color:#f70a0a;display:inline-block;width:3.75rem;font-size:16px;}
.nav em{color:#fff;font-style:normal;margin:0 10px;display:block; font-size: 16px;}
