body{font-size:16px;color:#333;background:#fff;}
header{background:#ff647c;color:#fff;}
header h2{font-weight:normal;position:relative;font-size:18px;height:44px;line-height:44px;}
header a.ui-icon-return{color:#fff;position:absolute;left:0;top:0;font-size:30px;}
section{position:relative;}
/* 首页 */
.unit a{position:absolute;top:0;left:0;width:100%;height:100%;}
.image{position:relative;}
.title{position:absolute;border:1px solid #fff;top:10px;left:50%;width:8rem;margin-left:-4rem;}
.doc{background:rgba(255,255,255,0.6);width:7rem;margin:.25rem;padding:.25rem;}
.doc h2{font-size:14px;font-weight:normal;line-height:30px;}
.doc span,.doc small{display:block;}
.doc small{font-size:12px;line-height:30px;}
.doc span{border:1px solid #ff647c;width:2rem;margin:0 auto;color:#ff647c;padding:2px;font-size:14px;border-radius:4px;}
.text{position:relative;background:#fff;padding:10px;}
.text:before{position:absolute;left:50%;top:-8px;content:'';border-left:8px solid transparent;border-right:8px solid transparent;border-bottom:8px solid #fff;margin-left:-4px;}
.text p{color:#666;line-height:24px;}
.text i{color:#ff7200;font-style:normal;}

/* 第二页 列表页 */
.sec{width:9.6rem;padding:.4rem .2rem;}
.sec li{width:4.7rem;height:1.6rem;border-radius:6px;overflow:hidden;margin-right:.2rem;margin-bottom:.2rem;}
.sec li:nth-child(2n){margin-right:0;}
.sec li a{display:block;width:100%;height:100%;position:relative;}
.font{position:absolute;top:0;left:0;padding:8px;}
.font h2{font-size:14px;font-weight:normal;color:#333;}
.font h3{font-size:12px;font-weight:normal;color:#666;}

/* 第三页 */
.t2i{width:9rem;padding:.5rem;}
.t2i h2{font-weight:normal;font-size:18px;color:#333;line-height:40px;}
.t2i small{font-size:14px;padding-bottom:10px;display:block;color:#999;}
.t2i p{line-height:30px;font-size:14px;}
.t2i img{padding:20px 0;}