/*common css*/
body{font-family: Microsoft Yahei,SimSun,Helvetica;}
li{list-style: none;}
img{vertical-align: top;}
*{margin: 0; padding: 0;}
a{text-decoration: none;-webkit-tap-highlight-color:rgba(0,0,0,0);}
.clear:after{content: '';display: block; clear: both;}
/*main css*/
.state{background: #eeeeee; padding: .5rem .32rem;}
.state img{width: 2.5rem; height: 2.5rem; display: block; margin: 0 auto .8rem;}
.state p{text-align: center; font-size: 16px; color: #333;}

.patient{padding:.15rem .32rem;}
.patient .title{height: .8rem; line-height: .8rem; margin-bottom: 0.3rem;}
.patient .title h2{float: left; color: #000; font-size: 13px;}
.patient .title a{float: right; color: #0099ff; font-size: 13px;}
.patient .info{padding-left: .6rem; font-size: 13px; color: #000; height: 0.4rem; line-height: 0.4rem; margin-bottom: 0.5rem;}
.patient .info span{color: #999999;font-size: 12px;}
.patient .mes{padding-left: .6rem; font-size: 13px; color: #333; line-height: .6rem; }
.patient .mes p{padding-bottom: 0.6rem; border-bottom: 1px solid #e7e7e7;}
.patient .mes span{color: #999;}

.doctor{padding: .15rem .32rem;}
.doctor .title{font-size: 13px; color: #000; margin-bottom: 0.3rem; height: .8rem; line-height: .8rem;}
.doctor .info{padding-left: .6rem;}
.doctor .info img{ float: left; width: 1rem; height: 1rem; border-radius: 1rem; margin-right: 0.26rem;}
.doctor .mes{float: left;}
.doctor .mes p{font-size: 12px; color: #999; width: 6rem; display: block;}
.doctor .mes p span{font-size: 14px; color: #000;}
.info-wrap{padding-bottom: 0.6rem; border-bottom: 1px solid #e7e7e7;}

.time{padding:0 .32rem; font-size: 13px; color: #333; line-height: .8rem; height: .8rem;}
.price{padding:0 .32rem; font-size: 13px; color: #333;}
.price span{color: #ff0000;}
a.link{display: block; width: 9.36rem; margin: 0.4rem auto; border: 1px solid #4891ef; border-radius: 3px; height: .8rem; line-height: .8rem; text-align: center; color: #4891ef; font-size: 14px;}
a.go{display: block; width: 9.36rem; margin: 0.4rem auto; background: #4891ef; border-radius: 3px; height: .8rem; line-height: .8rem; text-align: center; color: #fff; font-size: 14px;}
input.go{display: block; width: 9.36rem; margin: 0.4rem auto 0; background: #4891ef; border-radius: 3px; height: .8rem; line-height: .8rem; text-align: center; color: #fff; font-size: 14px; box-shadow: 0; border: 0;}
.fail{padding:0 .32rem; font-size: 13px; color: #333; line-height: .8rem; height: .8rem;}

.state_con{ padding:0 .32rem; overflow:hidden; padding-bottom:10px;}
.state_con a{display: block; width: 4.46rem; margin: 0.4rem auto 0; border: 1px solid #4891ef; border-radius: 3px; height: .8rem; line-height: .8rem; text-align: center; color: #4891ef; font-size: 14px; float:left;}
.state_con .tongyi{ margin-right:.30rem;}

#sub2{display: block; width: 9.36rem; margin: 0.4rem auto; background: #4891ef; border-radius: 3px; height: .8rem; line-height: .8rem; text-align: center; color: #fff; font-size: 14px; border: none;}