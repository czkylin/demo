*{
	margin: 0;
	padding: 0;
}
body{
	font-family: "微软雅黑";
	-webkit-user-select:none;
	user-select:none;
	-webkit-text-size-adjust: 100%;
	text-size-adjust: 100%;
}
a{
	text-decoration: none;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
input,button{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
img{
	vertical-align: top;
}
li{
	list-style: none;
}
.clear:after{
	content: '';
	display: block;
	clear: both;
}
.fl{
	float: left;
}
.fr{
	float: right;
}