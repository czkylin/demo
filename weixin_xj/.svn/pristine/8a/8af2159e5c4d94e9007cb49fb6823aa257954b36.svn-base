/*common css*/
*{margin: 0; padding: 0}
li{list-style: none}
img{vertical-align: top}
a{text-decoration: none; -webkit-tap-highlight-color:rgba(0,0,0,0)}
body,html{height: 100%;}
.text-center{text-align:center;}
.wrapper{height: 100%;}
/*main page css*/
.wrapper img{width: 100%}
/*tab*/
.tab{display: flex; display: -webkit-flex; position: relative; width: 100%; background-color: #fff;z-index:100;}
.tab li{flex:1; -webkit-flex:1; height: 45px; line-height: 45px; text-align: center; border-bottom: 2px solid #f4f4f4; font-size: 14px; color: #0b0b0b;}
.tab li.active{border-bottom-color: #ff3c3c; color: #ff2323;}
/*content*/
.content{display: none;}
.content.active{display: block;}
.block{display: block; width: 100%; height: 50px; opacity: 0;}
.content li{color: #0b0b0b; font-size: 16px; line-height: 24px; padding: 12px 30px 0;}
.content li i{display: inline-block; background: #727272; width: 6px; height: 6px; border-radius: 50%; margin: 5px 15px 3px 0;}
.content li span,table{color: #999999; padding: 6px 0 0 22px;}
.content li span{display: block;}
.content li table{width: 92%; font-size: 12px; border-collapse:collapse; margin: 6px 30px 0 22px;}
.content li table tr{width: 100%; height: 24px;}
.content li table td{ text-align: center; border: 1px solid #ccc;}
.content li table.quit td{width: 50%; }
.content li table.limit td.first{width: 60%; }
.content li table.limit td.second{width: 40%; }
/*link*/
.link{display: flex; display: -webkit-flex; width: 100%; position: fixed; left: 0; bottom: 0;z-index:100;}
.link span{flex:0 0 120px; -webkit-flex:0 0 120px; width: 120px; line-height: 50px; height: 50px; background: #945e21; text-align: center; font-size: 14px; color: #fff;}
.link a{flex:1; -webkit-flex:1; line-height: 50px; height: 50px; background: #fa9d34; text-align: center; font-size: 16px; color: #fff;}
.open,.close{position:relative;}
.close{display:none;}
.open p,.close p{color:#795759;font-size:14px;position:absolute;left:0;width:100%;line-height:20px;padding:6px 0;transition:1s;-webkit-transition:1s;}
.open i,.close i{display:block;width:20px;height:20px;line-height:40px;margin:-4px auto;transition:1s;-webkit-transition:1s;padding-bottom:10px;}
.close i,.open em{background-position:0 -20px;transition:2s;-webkit-transition:2s;}
.open span{vertical-align:middle;}
.open p.add{bottom:0;}
.open p.reduce{top:0;}
.add{z-index:10;}
.up{transform:translate3d(0,-32px,0);-webkit-transform:translate3d(0,-32px,0);}
.down{transform:translate3d(0,40px,0);-webkit-transform:translate3d(0,40px,0);}
.rotate{transform:rotate(45deg);-webkit-transform:rotate(45deg);}
.path{transition:1s;-webkit-transition:1s;}
.open p.fixed{position:fixed;top:12px;}
.more{position:relative;}
.more p{position:absolute;top:6%;left:50%;margin-left:-120px;width:240px;}
.more p img{width:100%;}
.more a{width:100px;margin:20px auto;text-align:center;display:block;background:#7f614a;color:#fff;line-height:30px;border-radius:6px;}
