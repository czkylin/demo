@font-face {
 font-family: 'wxfont';
 src:  url('/weixin/Public/Common/css/commonFont/iconfont-full.woff') format('woff'),
        url('iconfont-full.ttf') format('truetype'),
        url('iconfont-full.fcp') format('fcp'),
        url('iconfont-full.otf') format('otf');
} 
.icon{
    font-family:"wxfont" !important;
    font-size:30px;
    font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}
*{margin:0;padding:0;}
img{vertical-align:middle;border:none;}
a{text-decoration:none;}
html,body{width:100%;height:100%;font-size:16px;}
body{background:#fff;overflow:hidden;}
body.rise{overflow:auto;}
.hide{visibility:hidden;}
.show{visibility:visible;}
header,section,article{height:100%;}
header{background:#0084ff;position:relative;display:box;display:-webkit-box;-webkit-box-pack:center;-webkit-box-align:center;}
header section{width:90%;height:auto;margin:0 auto;}
.sky{position:absolute;bottom:0;left:0;width:100%;height:2rem;background:url(../../images/zhengcejiedu/yc1.jpg) no-repeat center bottom;background-size:cover;}
.title{position:relative;width:100%;height:2.125rem;}
.title h1{color:#fff;position:absolute;right:2rem;top:0;font-size:20px;font-weight:normal;margin-top:-2px;z-index:1}
.title p{background:url(../../images/zhengcejiedu/mTitle.jpg) no-repeat;width:100%;height:100%;background-size:contain;}
.text{position:relative;border-top:1px solid #fff;border-bottom:1px dashed #fff;margin-top:8px;}
.text:before{position:absolute;content:'';border-left:.2rem solid transparent;border-right:.2rem solid transparent;border-top:.3rem solid #fff;top:0;left:50%;margin-left:-0.15rem}
.text p{color:#fff;text-indent:2em;font-size:14px;padding:15px 0 10px;}
article section{display:box;display:-webkit-box;-webkit-box-pack:center;-webkit-box-align:center;position:relative;}
article section:nth-child(1){background:#0084ff;position:relative;}
article figure{height:100%;margin:0;}
article .wBox{width:90%;}
.section{width:90%;margin:0 auto;}
.section h2{text-align:center;width:100%;line-height:20px;height:20px;position:relative;}
.section span{position:absolute;top:0;left:0;z-index:1;width:100%;height:100%;color:#3480cd;font-weight:bold;}
.section strong{background:url(../../images/zhengcejiedu/round.jpg) no-repeat center bottom;position:absolute;top:0;left:0;width:100%;height:100%;z-index:0;}
article section h3{background:url(../../images/zhengcejiedu/yc2.jpg) no-repeat;background-size:100% 300%;height:.67rem;margin-top:.4rem;}
article section:nth-child(2) h3{background-position:0 -0.67rem;}
article section:nth-child(3) h3{background-position:0 -1.34rem;}
.section p{text-align:center;color:#ff9900;height:24px;line-height:24px;}
.section p:nth-of-type(1){margin-top:6px;}
.video{position:relative;height:5.9rem;overflow:hidden;margin-top:.5rem;}
.video video{width:100%;height:100%;}
.video img{position:absolute;top:0;left:0;width:100%;}
footer{background:#f5f5f5;text-align:center;position:absolute;bottom:0;left:0;width:100%;height:60px;overflow:hidden;}
footer .img{background:url(../../images/zhengcejiedu/mlogo.png) no-repeat center center;width:40%;height:60px;display:inline-block;overflow:hidden;background-size:contain;}
.header{position:absolute;width:100%;color:#fff;font-weight:normal;padding:.5rem 0;background:#ff647c;}
.header h2{width:100%;text-align:center;font-weight:normal;}
.header a{color:#fff;position:absolute;left:.5rem;top:.5rem;font-size:30px;}