        $('.chanpin').delegate('ul#plist li label .jianshao', 'click', function () {
            var _this = $(this)
                , $num = _this.next().find('span').eq(0)
                , n = $num.text()
                , count = parseInt(n) - 1 > 0 ? parseInt(n) - 1 : 1;
            $num.text(count);
            $(this).siblings('input').attr("value", count);
