        <ul class="list">
            <li class="noactive">
                起始时间：<span>{$xdyp_detail['PAY_TIME']|Dtodiy='Y-m-d',###}</span>
            </li>
            <li class="noactive">
                结束时间：<span>{$xdyp_detail['END_TIME']|Dtodiy='Y-m-d',###}</span>
            </li>
        </ul> 
        <a href="{:U('Member/Order/xdyp')}&d_openid={$openid}" class="sub">再次购买</a>  
