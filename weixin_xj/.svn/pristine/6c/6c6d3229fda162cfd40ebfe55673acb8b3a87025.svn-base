body {color: #333;background: #f5fafd;font-size: 16px;font-family: "微软雅黑", "黑体";}
body.grey { background: #f1f1f1; }
textarea { -webkit-appearance: none;}

a,input,li{text-decoration: none;-webkit-tap-highlight-color:rgba(0,0,0,0);}
.unit h2 { padding-top: 10px; padding-left: .5rem; font-size: 14px; font-weight: normal; line-height: 40px; color: #a7a7a7; }
.unit h3 { font-weight: normal; font-size: 16px; line-height: 20px; }
.content { background: #fff; padding: .3rem .5rem; position: relative; }
.content a { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
.content p { color: #a7a7a7; font-size: 12px; line-height: 18px; }
.img { padding-right: .5rem; }
.img img { width: 1.6rem; height: 1.6rem; border-radius: 1.6rem; }
.time { color: #999; padding-top: 10px; line-height: 30px; font-size:14px; }
.zoom { background: #fff; border-radius: 6px; margin: 0 .3rem; padding: .4rem .5rem; }
.zoom header span, .zoom header em, .zoom header i { font-style: normal; display: block; }
.zoom header span { font-size: 16px; width: 3rem; }
.zoom header em { font-size: 14px; color: #999; width: 2rem; margin-top: 3px; }
.zoom header i { color: #999; width: 3.4rem; }
.zoom header i.wait { color: #ff8400; font-size:14px; }
.zoom header i.ok { color: #333; }
.zoom header i.ing { color: #4891ef;font-size:14px; }
.zoom header p { padding: 15px 0; font-size:14px; }
.zoom header b { font-weight: normal; font-size:14px; }
.zoom footer { border-top: 1px solid #e7e7e7; padding-top: .4rem; }
.zoom footer .nr { width: 4rem; }
.zoom footer .nr:nth-child(1) { margin-right: .2rem; }
.zoom footer .nr:nth-child(2) { margin-left: .2rem; }
.imgs img { width: 1rem; height: 1rem; border-radius: 1rem; }
.txts { width: 2.8rem; margin-left: .2rem; }
.txts h2 { font-size: 14px; font-weight: normal; }
.txts small { font-size: 10px; color: #999; margin-left: 4px; }
.txts span { font-size: 12px; color: #999; }
.view { padding: 20px 0.3rem; border-bottom: 1px solid #e6e6e6; margin-bottom: 20px; }
.view a { color: #4891ef; border: 1px solid #4891ef; border-radius: 6px; text-align: center; display: inline-block; line-height: 30px; padding: 0 10px; font-size: 14px; }
.btn { text-align: right; margin: 0 .3rem; padding: .3rem 0; }
.btn a { display: inline-block; font-size: 12px; width: 2.4rem; height: .6rem; line-height: .6rem; text-align: center; color: #ff8400; border: 1px solid #ff8400; border-radius: 3px; }
.zoom header i.green { color: #00d05d; font-size:14px;}
.btn a.blue { color: #4891ef; border-color: #4891ef; }
/*拒绝申请郑洁11.02*/
.view2 { padding: 20px 0.3rem; }
.view2 a { color: #4891ef; border: 1px solid #4891ef; border-radius: 6px; text-align: center; display: inline-block; line-height: 30px; padding: 0 10px; font-size: 14px; margin-right: 20px; }
.jujue_con { position: fixed; background: rgba(0,0,0,0.6); top: 0; left: 0; width: 100%; height: 100%; z-index: 100; display: none; }
.jujue_nei { background: #fff; width: 100%; ; height: 8rem; position: absolute; bottom: 0; left: 0; }
.jujue_nei h2 { font-weight: normal; line-height: 30px; font-size: 16px; }
.jujue_nei .wanc { display: block; width: 100%; height: 0.8rem; line-height: 0.8rem; text-align: center; font-size: 14px; color: #fff; background: #4891ef; border-radius: 3px; margin-top: 25px; }
.result { padding: 15px; }
textarea { height: 90px; border: 1px solid #ccc; padding: 10px; outline: 0; resize: none; width: 100%; box-shadow: none; box-sizing: border-box; }
.result ul li { height: 30px; line-height: 30px; }
.result ul li input { float: left; display: none; }
.result ul li label{ background:url(/weixin/Public/Expert/images/zj/icon.png) no-repeat left center; background-size:18px; height:30px; line-height:30px; display:block; float:left; padding-left:30px; color:#666; font-size:12px;}
.result ul li label.on{background:url(/weixin/Public/Expert/images/zj/icon2.png) no-repeat left center; background-size:18px; height:30px; line-height:30px; display:block; float:left; padding-left:30px; color:#666; font-size:12px;}