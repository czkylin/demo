<div style=" position:fixed; left:31%; top:45%; width:40%; text-align:center;"><img src="/weixin/Application/Member/View/images/icon/zb.gif" /><br>
  获取地理位置....</div>
<script>

	function getLocation(){

		var geolocation = new qq.maps.Geolocation("WHCBZ-YZZK3-AK43H-3A77M-KZ5O3-CCFNI", "mapqq");

		geolocation.getLocation(showPosition, showErr);
	}

	function showPosition(position){

		window.location.replace("/weixin/index.php?{$url_str}&lat=" + position.lat + "&lng=" + position.lng);

	}

	function showErr(){
		window.location.replace("/weixin/index.php?{$url_str}&lat=0&lng=0");
	}

	getLocation();

</script>
