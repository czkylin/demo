body,html{
	height: 100%;
}
/*patient nurse*/
#patient,#nurse{
	padding: 0.4rem 0.48rem;
	border-bottom: 1px solid #e7e7e7;
	position: relative;
}
#patient h2,#nurse h2{
	height: 1.2rem;
	line-height: 1.2rem;
	color: #333;
	font-size: 0.6rem;
	margin-bottom: 0.4rem;
}
#patient .info{}
#patient .info img,#nurse .info img{
	float: left;
	width: 1.5rem;
	height: 1.5rem;
	border-radius: 1.5rem;
	margin-right: 0.4rem;
}
#patient .main,#nurse .main{
	float: left;
}
#patient .main .name,#nurse .main .name{
	height: 0.75rem;
	line-height: 0.75rem;
	font-size: 0.52rem;
	color: #000;
}
#nurse .main .name span{
	font-size: 0.44rem;
	color: #999;
}
#patient .main .con,#nurse .main .con{
	height: 0.75rem;
	line-height: 0.75rem;
	font-size: 0.44rem;
	color: #999;
}
#patient a.btn{
	position: absolute;
	right: 0.5rem;
	top: 0.8rem;
	display: block;
	font-size: 0.52rem;
	color: #ff7a8f;
	border: 1px solid #ff7a8f;
	padding: 0.1rem 0.2rem;
	border-radius: 0.08rem;
}
#nurse .tel{
	float: right;
	width: 1rem;
	height: 1rem;
	background: url(/weixin/Public/Member/images/nurse/icon/tel.png) no-repeat;
	background-size: 1rem;
}
#nurse .stutas{
	position: absolute;
	right: 0.5rem;
	top: 0.8rem;
	display: block;
	font-size: 0.52rem;
	color: #fe0101;
}
/*map*/
#map{
	position: relative;
}
#map img{
	width: 100%;
	height: 100%;
}
#map a.link{
	position: absolute;
	bottom: 1rem;
	left: 0.5rem;
	display: block;
	width: 14rem;
	height: 1.6rem;
	line-height: 1.6rem;
	text-align: center;
	background: #ef4a65;
	color: #fff;
	font-size: 0.6rem;
	border-radius: 0.12rem;
}
#map span{
	position: absolute;
	left: 0;
	top: 0;
	display: block;
	width: 100%;
	background: #f8f8f8;
	color: #333;
	font-size: 0.52rem;
	height: 1rem;
	line-height: 1rem;
	text-align: center;
}