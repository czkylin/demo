*{margin:0;padding:0;-webkit-tap-highlight-color:rgba(0,0,0,0);vertical-align:baseline;}
li{list-style: none;}
img{border:none;vertical-align:middle;width:100%;}
a{text-decoration:none;}
body{font-family:"microsoft Yahei";font-size:12px;color:#666; background: #fff;}
html{height:100%;}
.text-center{text-align:center;}
.wrap{padding: 0 10px;}
.title{font-size: 18px; text-align: center; color: #333; line-height: 20px; font-weight: normal; padding: 13px 0 5px 0;}
.title-con{text-align: center; margin-bottom: 20px;font-size:14px;}
.img{width: 100%; margin-bottom: 20px;}
.img img{width: 100%;} 
.contxt p{line-height: 30px; margin-bottom:10px; font-size:14px;}
#code{padding-bottom:20px;}
#code img{width:80%;vertical-align:top;margin:.2rem auto;display:block;}
.statement{background:#f2f2f2;font-size:14px;width:90%;margin:0 auto;padding:.1rem 0;color:#333;}
.statement h2{font-size:16px;font-weight:normal;}
.statement p{width:90%;margin:10px auto 0;}
#code p:nth-child(3){color:#9d9d9d;font-size:14px;width:90%;margin:0 auto;padding-bottom:.2rem;}
#code p:nth-child(4){color:#333;font-size:14px;width:90%;margin:0 auto;padding-bottom:.2rem;}
#top{color:#9d9d9d;text-align:center;width:60%;margin:0 auto;border:1px solid #333;border-radius:50px;font-size:16px;display:block;padding:.05rem 0;text-decoration:none;}