/*common css*/
*{margin: 0; padding: 0;}
img{vertical-align: top;}
li{list-style: none;}
a{-webkit-tap-highlight-color:rgba(0,0,0,0); text-decoration: none;}
i{font-style: normal;}
.clear:after{display: block; content: ""; clear: both;}
/*main*/
h2{padding: 0 3.2%; height: 35px; background: #f5f5f9; line-height: 35px; color: #333; font-size: 16px;}
.list{padding: 0 3.2%;}
.list li{padding: 10px 0; border-bottom: 1px solid #f5f5f5;}
.list li .date{float: left;}
.list li .date p{color: #000; font-size: 16px; height: 24px; line-height: 24px;  font-weight: 700; }
.list li .date span{color: #999; font-size: 12px; display: block; height: 24px; line-height: 24px;}
.list li img{float: left; width: 50px; height: 50px; margin: 0 6%;}
.list li .price{float: left;}
.list li .price p{color: #000; font-size: 16px; height: 24px; line-height: 24px;   font-weight: 700;}
.list li .price span{color: #999; font-size: 14px; display: block;height: 24px; line-height: 24px; }