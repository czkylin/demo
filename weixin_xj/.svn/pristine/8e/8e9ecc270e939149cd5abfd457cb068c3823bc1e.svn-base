article section,header section{width:92%;padding:4%}body{background:#ebebeb;font-size:16px}input,select{-webkit-appearance:none;border-width:0;background:#fff}header.blue{background:#4571ff;border-bottom-width:0}header.blue i{color:#fff}header section h2,header section h3{font-size:14px;font-weight:400;color: #333}header section h2{padding-bottom:.2rem;font-size:24px}header section p{padding:.05rem 0;color:#999; font-size: 12px;}article{background:#fff;border-bottom:10px solid #ebebeb}article section{position:relative}article section li{display:box;display:-webkit-box;padding-bottom:14px;position:relative}article section li:nth-child(2):before{position:absolute;content:'';border-left:4px solid transparent;border-right:4px solid transparent;border-top:6px solid #ccc;top:50%;right:24px;z-index:10;margin-top:-10px}article section span{font-weight: 400; font-size: 12px; color: #333333; display:inline-block;vertical-align:middle;width:0.5rem}article section span i{font-style:normal;color:#f40808}article section input,article section select{border:.01rem solid #ccc;width:2rem;padding:.05rem;display:inline-block}article section select{width:2.12rem;position:relative}article section select:before{position:absolute;content:'';border-left:.1rem solid transparent;border-right:.1rem solid transparent;border-bottom:.2rem solid #ccc;top:50%;right:.1rem;margin-top:-.1rem}#upload,.l{position:relative}article section textarea{width:1.5rem;border:.01rem solid #ccc;vertical-align:middle;padding:.05rem}article section .option{}article section .option a{color:#666;border:1px solid #ccc;display:block; float: left; height:28px;line-height:28px;margin-bottom:10px; width: 28%; font-size:12px;text-align: center; border-radius:2px}#upload,.hTitle{padding-bottom:14px; font-weight: 500; color: #333;}#upload,.go{margin:0 auto}article section .option a.active{border:1px solid #ff647c;color:#ff647c}.bRight h3,.bRight p,.go,article h4{color:#fff}article:last-of-type{background:0 0; border-bottom: none;}article h4{background:#ffbf5a;font-size:14px;font-weight:400;text-indent:.15rem;height:30px;line-height:30px}.go{width:100%;display:block;text-align:center;background:#ff6600;height:50px;line-height:50px;}.bRight{display:inline-block;vertical-align:middle}.bRight p{font-size:14px}.tt{width:2.58rem}#upload{width:226px;display:box;display:-webkit-box}.l{width:42px;height:42px;margin-right:4px}.upload:after,.upload:before{position:absolute;top:50%;left:50%;content:'';background:#ccc}.upload{border:1px solid #ccc;width:40px;height:40px;display:block}.upload:last-child{margin-right:0}.upload:before{width:2px;height:20px;margin-top:-10px;margin-left:-1px}.upload:after{width:20px;height:2px;margin-top:-1px;margin-left:-10px}#f,.previewImage{position:absolute;top:0}.previewImage{width:100%;vertical-align:top;visibility:hidden;left:0}#f{left:1000000px}
.clearfix:after{display: block; content: ''; clear: both;}
article section .option a:nth-of-type(3n-1){margin:0 6% 10px 6%;}
