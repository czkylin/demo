//刷新时间
$('.times').each(function(){
    var str = $(this).find('small').html(),
        y = str.split(':')[0].split(' ')[0],
        h = str.split(':')[0].split(' ')[1],
        m = str.split(':')[1];
    var s1 = new Date(y),
        s2 = new Date();
    var days = s2.getTime() - s1.getTime();
    var time = parseInt(days / (1000 * 60 * 60 * 24));
   // console.log( time );
    if(time == 0){
        $(this).find('small').html((h>12?((parseInt(h)-12)+':'+m+' PM'):(h+':'+m+'AM')));
    }else if(time == 1){
        $(this).find('small').html('昨天 '+(h>12?((parseInt(h)-12)+':'+m+' PM'):(h+':'+m+'AM')));
    }else if(time == 2){
        $(this).find('small').html('前天 '+(h>12?((parseInt(h)-12)+':'+m+' PM'):(h+':'+m+'AM')));
    }else{
        $(this).find('small').html(y);
    }   
})

//评论提交
function pj_tj()
{
      var desc = $("#desc").val();
      var pj_flag = $(".pllist li").eq(iNum).find('input').val();
      var expert_id = $("#eid").val();
      var consult_id = $("#con_id").val();
     // alert(consult_id);false;
     if(pj_flag=="")
      {
            alert("请输入评价服务！");
            return false;
      }
      if(desc=="")
      {
            alert("请输入评价内容内容！");
            return false;
      }
      else
      {
            $.ajax({
            type: "POST",
            url: "/weixin/index.php?m=Expert&c=Jtys&a=pl_ok",
            data: {"desc":desc,"pj_flag":pj_flag,"expert_id":expert_id,"consult_id":consult_id},
            success: function(msg)
            {

                switch (msg) {
                    case '1': //注册成功
                       alert('已经评论过');
                        location.href="/weixin/index.php?m=Expert&c=Jtys&a=consult_details";
                        break;
                        break;
                    case 'ok': //已经注册过
                        location.href="/weixin/index.php?m=Expert&c=Jtys&a=consult_details";
                        break;
                    default: //错误！请直接发送资料到公众号 
                       alert('评论失败');
                        return false;
                        break;
                    }

            }
        });
      
     }
}
