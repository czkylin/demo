    function isMail(ssn) //检查邮箱是否匹配正则表达式
    {
        var re = /^[0-9a-zA-Z_-]+@[0-9a-zA-Z_-]+((\.[0-9a-zA-Z_-]{2,3}){1,2})$/i;
        if (re.test(ssn)) {
            return true;
        } else {
            return false;
        }
    }

    function isPhone(ssn) //检查手机是否匹配正则表达式
    {

        var re = /^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$/i;
        if (re.test(ssn)) {
            return true;
        } else {
            return false;
        }
    }

