.con{width: 100%; overflow: hidden; box-sizing: border-box; min-width: 1200px;}
.w1080{width: 1080px; margin: 0 auto; min-width: 1080px;}
p{font-size: 14px; color: #666666;}
.banner{height: 420px; background: url('/Public/images/focus/news/banner.jpg') no-repeat center; background-size: cover; overflow: hidden; color: #ffffff;}
.banner p{color: #ffffff;}
.banner .title{margin: 132px 0 0 60px; font-size: 32px;}
.banner .desc{margin-left: 60px; font-size: 16px;}
.nav{height: 52px; line-height: 52px; font-size: 12px;}
.nav span{display: inline-block; width: 30px; text-align: center; color: #999999;}
.nav a{color: #999999;}
.nav a:nth-child(1){color: #333333;}
.con1{padding: 0 60px; width: 1080px; min-width: 1080px; height: auto; margin: 0 auto 100px; border: 1px solid #e2e2e2;}
.con1 h2{height: 72px; line-height: 72px; text-align: center; font-size: 18px; color: #077478; font-weight: bold;}
.con1 .title{position: relative; height: 48px; line-height: 48px; border-bottom: 1px dashed #e2e2e2; font-size: 14px; color: #888888;}
.con1 .title2{margin-left: 40px;}
.con1 .title span.phone{display: inline-block; margin-right: 40px; width: 76px; text-align: right; background: url('/Public/images/focus/newsDetail/img1.png') no-repeat 0 16px; background-size: 10px 16px; cursor: pointer;}
.con1 .title ul{margin-top: 10px; display: inline-block; padding: 2px 0; height: 28px; border: 1px solid #e2e2e2; box-sizing: border-box;}
.con1 .title ul li{width: 30px; height: 22px; border-right: 1px solid #e2e2e2; box-sizing: border-box; text-align: center; line-height: 22px; cursor: pointer;}
.con1 .title ul li:nth-child(3){border: 0;}
.con1 .title ul li.active{background: #f5f5f5;}
.con1 .title .title3{position: relative;}
.con1 .title .QRcode{display: none; position: absolute; top: 48px; left: 10px; width: 170px; height: 90px; border: 1px solid #e2e2e2; background: #ffffff; z-index: 999; box-sizing: border-box;}
.con1 .title .QRcode.active{display: block;}
.con1 .title .QRcode:before{content: ''; position: absolute; top: -20px; left: 36px; width: 0; height: 0; border-width: 10px; border-style: solid; border-color: transparent transparent #e2e2e2 transparent;}
.con1 .title .QRcode:after{content: ''; position: absolute; top: -16px; left: 38px; width: 0; height: 0; border-width: 8px; border-style: solid; border-color: transparent transparent #ffffff transparent;}
.con1 .title .QRcode img{margin: -20px 0 0 10px;}
.con1 .title .QRcode span{display: inline-block; margin-left: 6px; width: 70px; line-height: 18px; margin-top: 26px;}
.con1 .text{text-align: center;}
.con1 .text h1 span{font-size: 24px;}
.con1 .text p{width: 958px; line-height: 30px; text-align: left; text-indent: 28px;}
.con1 .text li{line-height: 30px; text-align: left; text-indent: 28px; font-size: 16px;}
.con1 .text .node__content p{font-size: 18px; line-height: 36px;}
.con1 .text>span{display: inline-block; width: 100%; line-height: 30px; text-align: left; text-indent: 28px;}
.con1 .text p:nth-child(1){margin-top: 24px;}
.con1 .text img{display: block; margin: 20px 0; width: 100%; height: auto;}
.con1 .text p.last{margin-top: 36px; width: 100%; text-align: left;}
.con1 .text p.last span{color: #077478;}
.con1 .text p.last a{margin-left: 12px; color: #077478;}
.con1 .text p.bottom{margin: 20px 0; text-align: right;}
.con1 .text p.bottom a{margin-left: 30px; text-align: right; color: #666666;}
.con1 .text p.bottom a span{color: #077478;}
.con1 .text p.bottom a:nth-of-type(1){margin: 0;}
.con1 .text p.font1,.con1 .text p.font1 span{font-size: 16px !important;}
.con1 .text p.font2,.con1 .text p.font2 span{font-size: 14px !important;}
.con1 .text p.font3,.con1 .text p.font3 span{font-size: 12px !important;}
