.w1140{width: 1140px; margin: 0 auto;}
h2{line-height: 60px; text-align: center; font-size: 26px; color: #333333;}
h2 em{padding: 14px 0; border-bottom: 3px solid #077478;}
p{font-size: 14px; color: #666666;}
.banner{padding-top: 134px; height: 420px; min-width: 1200px; background: url('/Public/images/service/optometry/banner.jpg') no-repeat center; background-size: cover; overflow: hidden; box-sizing: border-box;}
.banner p{margin-left: 270px; color: #ffffff;}
.banner p.title{line-height: 66px; font-size: 24px;}
.banner p.desc{font-size: 70px;}
.con{width: 100%; padding-top: 72px; overflow: hidden; min-width: 1200px; box-sizing: border-box;}

.con1{height: 380px; background: #f5f5f5;}
.con1 p{margin-top: 50px; line-height: 30px; text-align: center;}

.con2{height: 1012px;}
.con2 dl{margin-top: 80px; width: 100%; height: 300px; clear: both;}
.con2 dl:nth-of-type(2){margin-top: 60px;}
.con2 dl dt,.con2 dl dd{float: left;}
.con2 dl:nth-of-type(1) dd{width: 630px; height: 300px; background: #85c1d6;}
.con2 dl dd p{margin: 44px 0 0 62px; line-height: 30px; color: #ffffff;}
.con2 dl:nth-of-type(2) dt{width: 630px; height: 300px; background: #8ebdbf;}
.con2 dl:nth-of-type(2) dt p{margin: 88px 34px 0 0; text-align: right; line-height: 30px; color: #ffffff;}

.con3{height: 732px; background: #f5f5f5;}
.con3 dl{position: relative; width: 340px; height: 400px; margin: 70px 58px 0 0; padding-top: 36px; background: #ffffff; float: left; text-align: center; box-shadow: 0 0 10px #f1f0f0; box-sizing: border-box;}
.con3 dl:nth-of-type(1){margin-left: 0;}
.con3 dl:nth-of-type(3){margin-right: 0;}
.con3 dl img{width: 150px; height: auto;}
.con3 dl p.title{margin: 20px 0 10px 0; font-size: 20px; color: #333333; font-weight: bold;}
.con3 dl p.desc{width: 280px; margin: 0 auto; font-size: 14px; color: #666666;}
.con3 dl p.text{width: 280px; margin: 22px auto 0; line-height: 22px; font-size: 14px; color: #333333;}
