body{position: relative;}
.cover{position: absolute; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3);}
.cover .cover1{position: absolute; top: 0; bottom: 0; left: 0; right: 0; margin: auto;}
.cover .cover2{position: absolute; top: 834px; right: 710px;}
.con{width: 100%; overflow: hidden; box-sizing: border-box; min-width: 1200px;}
p{font-size: 14px; color: #666666;}
.w1200{width: 1200px; height: auto; margin: 0 auto; min-width: 1200px;}
.banner{height: 420px; background: url('/Public/images/contact/guide/banner.jpg') no-repeat center; background-size: cover; overflow: hidden;}
.nav{height: 52px; line-height: 52px; font-size: 12px;}
.nav span{display: inline-block; width: 30px; text-align: center; color: #999999;}
.nav a{color: #999999;}
.nav a:nth-child(1){color: #333333;}
.con1 ul{width: 270px; height: auto; border: 1px solid #e2e2e2; border-top: 0; float: left; font-size: 14px; color: #333333;}
.con1 ul li{height: 45px; line-height: 45px; border-top: 1px solid #e2e2e2; text-align: center; cursor: pointer;}
.con1 ul li.active{background: #f5f5f5; color: #077478;}
.con1 .content{display: none; position: relative; margin-bottom: 120px; padding: 0 40px 90px; box-sizing: border-box; width: 900px; height: auto; border: 1px solid #e2e2e2; float: right;}
.con1 .content.active{display: block;}
.content h2{width: 100%; height: 78px; line-height: 78px; border-bottom: 1px dashed #e2e2e2; font-size: 18px; color: #333333; font-weight: bold;}
.content h3{margin-top: 26px; line-height: 30px; font-size: 14px; color: #077478;}
.content p{line-height: 30px;}
.content p.title{margin-top: 30px; padding-left: 20px; background: url('/Public/images/contact/guide/point.png') no-repeat left 12px; background-size: 7px 7px;}
.content p.indent{text-indent: 28px;}
.content p.desc i{font-weight: bold;}
.content strong{color: #077478;}
.content .plane{position: absolute; top: 400px; right: 140px; width: 120px; text-align: center; font-size: 12px; color: #999999;}
.content1 p.title,.content4 p.title,.content7 p.title{margin: 0;}
.content4 p.title:nth-of-type(1){margin-top: 30px;}
.iw_poi_title {color:#CC5522;font-size:14px;font-weight:bold;overflow:hidden;padding-right:13px;white-space:nowrap}
.iw_poi_content {font:12px arial,sans-serif;overflow:visible;padding-top:4px;white-space:-moz-pre-wrap;word-wrap:break-word}
