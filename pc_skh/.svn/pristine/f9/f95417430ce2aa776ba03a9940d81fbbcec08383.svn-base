*{ padding: 0; margin: 0; }
a{text-decoration: none;}
i,em,b{ font-style: normal; }
img{ vertical-align: middle; }
ul,li{list-style: none;}
h1,h2,h3,h4,h5,h6{font-weight: normal; font-size: 16px;}
html,body{ font-family: "Microsoft Yahei"; }
.ovfl{ overflow: hidden; }
.clear:before,.clear:after { content: ""; display: block; clear: both;}
.clear {zoom: 1;}
.fl{ float: left;}
.fr{ float: right;}
.w1200{width: 1200px; margin: 0 auto; min-width: 1200px;}

/* 头部样式 */
.header{min-width: 1200px;}
.h_top{ width: 100%; height: 28px; line-height: 28px; font-size: 12px; color: #ffffff; background: #555555; }
.h_bottom{ width: 100%; height: 100px; font-size: 16px;}
.h_bottom .logo{display: block; margin: 22px 88px 0 0;}
.h_bottom ul{height: 100px;}
.h_bottom ul>li{ position: relative; padding: 0 24px; float: left; line-height: 100px; vertical-align: middle; cursor: pointer;}
.h_bottom ul .tab_nav:after{content: ""; position: absolute; left: 12px; bottom: 36px; display: block; width: 80%; height: 2px; background: #077478; opacity: 0;}
.h_bottom ul .tab_nav.on:after{transition: .3s; bottom: 0; opacity: 1;}
.h_bottom ul .tab_nav.on>a{color: #077478;}
.h_bottom ul a{color: #333333;}
.h_bottom ol{display: none;}
.h_bottom ol.show{display: block;}
.h_bottom .tab_con{position: absolute; left: 10px; width: 224px; padding: 6px 0; background: #f5f5f5; z-index: 999;}
.h_bottom .tab_con li{padding-left: 14px; height: 40px; line-height: 40px;}
.h_bottom .tab_con li:hover{background: #ffffff; color: #077478;}
.h_bottom .search_box{width: 224px; height: 40px; margin-top: 30px; border: 1px solid #dddddd; border-radius: 10px; box-sizing: border-box;}
.h_bottom .search_box .search{float: left; width: 180px; height: 100%; padding-left: 12px; border: 0; border-radius: 10px; line-height: 40px; color: #999999; font-size: 12px; box-sizing: border-box;}
.h_bottom .search_box .searchButton{display: block; float: left; width: 42px; height: 100%; border-radius: 10px; background: url('/Public/Common/images/search.png') no-repeat center; border: 0; border-left: 1px solid #dddddd; box-sizing: border-box;}
.footer{min-width: 1200px;}
.ft_top{width: 100%; height: 190px; background: #444444;}
.ft_bottom{width: 100%; height: 40px; line-height: 40px; background: #333333; text-align: center; font-size: 12px; color: #999999;}
.ft_top ul{margin: 28px 144px 0 0; float: left; font-size: 12px;}
.ft_top ul:nth-child(1){margin-left: 168px;}
.ft_top ul li{line-height: 24px;}
.ft_top ul li:first-child a{color: #ffffff;}
.ft_top ul li:first-child{line-height: 30px;}
.ft_top ul li a{color: #bbbbbb;}
.ft_top .text{float: right; width: 404px; height: 100px; margin-top: 58px; border-left: 1px solid #666666; padding: 0 122px; box-sizing: border-box; color: #ffffff;}
.ft_top .text .title{line-height: 20px; font-size: 12px;}
.ft_top strong{display: inline-block; margin-top: 14px; line-height: 32px; font-size: 22px;}
.ft_top .range{margin-top: 4px; line-height: 20px; font-size: 14px; color: #bbbbbb;}
